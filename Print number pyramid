n = int(input())
for i in range (1,n+1):
    for sp in range(i,1,-1):
        print(" ",end="")
    for k in range (i,n+1):
        print(k,end="")
    print()
for i in range (1,n):
    for sp in range(1,n-i):
        print(" ",end="")
    for k in range (n-i,n+1):
        print(k,end="")
    print()
    
