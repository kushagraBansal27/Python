n = int(input())
m = n//2+1 # 5//2+1 = 3
for i in range (1,m+1):
    for sp in range(0,m-i):
        print(" ",end="")
    for star in range(2*i-1) :
        print("*",end="")
    print()
for j in range (1,m):
    for sp in range(j):
        print(" ",end="")
    for star in range(1,n-2*j+1,1):
        print("*",end="")
    print()
